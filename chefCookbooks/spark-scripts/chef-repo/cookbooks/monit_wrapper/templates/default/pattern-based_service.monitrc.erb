# managed by chef, changes will be overwritten

check process <%= @service_name %>
  matching '<%= @cmd_line_pattern %>'
  every 1 cycles

  start program "/bin/bash -c 'exec <%= @cmd_line %><% if @out_file %> ><%= @out_file %> <% end %><% if @err_file %> 2><%= @err_file %><% end %>'"
  <% if @user %> as uid <%= @user %> as gid <%= @group || @user %> <% end %>

  stop program "/usr/bin/pkill <% if @user %> -u <%= @user %> <% end %> -f '<%= @cmd_line_pattern %>'"
  <% if @user %> as uid <%= @user %> as gid <%= @group || @user %> <% end %>
